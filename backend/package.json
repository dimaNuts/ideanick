{
  "name": "@ideaproject/backend",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "ts-node-dev --watch ./.env --rs --exit-child ./src/index.ts",
    "build": "rimraf ./dist && tsc --build ./tsconfig.json",
    "start": "node ./dist/index.js",
    "pmd": "prisma migrate dev",
    "pgc": "prisma generate",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/.eslintcache --fix --ext .ts .",
    "prettify": "prettier --cache --write '{src/**/*,*}.{ts,tsx,js,json,yml,scss}'",
    "types": "tsc --noEmit --project ./tsconfig.json",
    "prepare": "pnpm pgc"
  },
  "prisma": {
    "schema": "./src/prisma/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^6.6.0",
    "@trpc/server": "^10.45.2",
    "cors": "^2.8.5",
    "express": "^4.21.1",
    "lodash": "^4.17.21",
    "superjson": "^1.13.3",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/lodash": "^4.17.16",
    "@types/node": "^22.10.1",
    "prisma": "^6.6.0"
  }
}
